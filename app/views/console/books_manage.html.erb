
<body>

<div class="container" style="margin-top:30px">
  <div class="row">
    <div class="col">
      <form action="/console/books_manage">
        <div class="input-group mb-3 input-group-lg">
          <div class="input-group-prepend">
            <span class="input-group-text">书籍检索</span>
          </div>
          <input type="text" class="form-control" placeholder="Search" name="book_name" id="input-book-name">
          <div class="input-group-append">
            <button class="btn btn-success" type="submit" id="btn-book-search">Go</button>
          </div>
        </div>
      </form>

    </div>
  </div>
  <% @book_types.each do |book_type| %>
  <div id="div-book-list">
    <div class = "row" id = "div-book-type-<%= book_type.id%>">
      <div class="col-sm-3">
      <%= image_tag(book_type.img_paths, alt: "Edit Entry", class: "img-responsive") %>
      </div>
        <div class="col-sm-7">
          <%= link_to "#{book_type.book_name}",controller: 'console', action: 'book_type_detail', id: book_type.freeze %>
          <%= link_to 'x', {remote: 'true',controller: 'console', action: 'book_type_delete', id:  book_type.id}, {class: 'close', data: {confirm: "确定删除该书籍吗?"}} %>
          <div class="text">
          <%= book_type.introduction%>
        </div>
          <br>
        </div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-5 col-center-block" >
      <%= paginate @book_types,left: 1,right: 1%>
    </div>
  </div>
</div>
</div>
</body>
