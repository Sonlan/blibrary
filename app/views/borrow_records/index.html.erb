<p id="notice"><%= notice %></p>

<h1>Listing Borrow Records</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Borrow time</th>
      <th>Time limit</th>
      <th>Status</th>
      <th>Book name</th>
      <th>Serial code</th>
      <th>User name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrow_records.each do |borrow_record| %>
      <tr>
        <td><%= borrow_record.user_id %></td>
        <td><%= borrow_record.book_id %></td>
        <td><%= borrow_record.borrow_time %></td>
        <td><%= borrow_record.time_limit %></td>
        <td><%= borrow_record.status %></td>
        <td><%= borrow_record.book_name %></td>
        <td><%= borrow_record.serial_code %></td>
        <td><%= borrow_record.user_name %></td>
        <td><%= link_to 'Show', borrow_record %></td>
        <td><%= link_to 'Edit', edit_borrow_record_path(borrow_record) %></td>
        <td><%= link_to 'Destroy', borrow_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

